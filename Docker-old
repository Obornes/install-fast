# Use a lightweight Linux distribution
FROM ubuntu:latest

# Set environment variables to avoid interactive prompts
ENV DEBIAN_FRONTEND=noninteractive

# Install required dependencies
RUN apt-get update && apt-get install -y \
    curl \
    bash \
    sudo \
    && rm -rf /var/lib/apt/lists/*

# Copy the Fast installation script into the container
COPY install_fast_linux.sh /usr/local/bin/install_fast_linux.sh

# Give execution permission to the script
RUN chmod +x /usr/local/bin/install_fast_linux.sh

# Run the script to install Fast
RUN /bin/bash /usr/local/bin/install_fast_linux.sh 0.5.5-beta

# Verify installation
RUN fast self:version

# Default command (optional)
CMD ["fast", "help"]
